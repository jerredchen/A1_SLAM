{
  "normalize-cloud": false,

  "icp": {
    "batch-size": 5,
    "max-matching-distance": 0.5,
    "max-iterations": 1000,
    "convergence-steps": 15,
    "translational-convergence": 5e-05,
    "rotational-convergence": 5e-06,
    "filter": false},

  "preconditioned_sgld2": {
    "adjust_noise": 1.0,
    "decay-rate": 0.9},

  "point-to-plane": true,
  "k-search": 25,

  "step_size": {
    "fixed": 1e-2,
    "decreasing": false,
    "a": 0.05,
    "b": 10,
    "gamma": -0.55}
}